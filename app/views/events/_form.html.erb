<%= form_with(model: @event, local: true) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :date %>
  <%= f.datetime_select(:date, ampm: true, start_year: 2020) %>

  <%= f.submit %>
<% end %>
